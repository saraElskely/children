<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css')}}" >
            <script src="{{ asset('js/jquery-3.2.1.min.js')}}" ></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        
    <div class="blog-masthead">
      <div class="container">
        <nav class="nav blog-nav">
          <a class="nav-link active" href="https://v4-alpha.getbootstrap.com/examples/blog/#">Home</a>
          
          {% if is_granted('ROLE_MOTHER') %}
              <a class="nav-link" href="{{ path('mother_show_my_children') }}">your children</a>
              <a class="nav-link" href="{{ path('mother_show_my_children_tasks') }}">your tasks</a>
              <a class="nav-link" href="{{ path('task_new') }}">Create task</a>
              <a class="nav-link" href="{{ path('mother_add_child') }}">Add child</a>
          {% endif %}
          
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="nav-link">{{ app.user.username }}</a>
          {% endif %}
        {% if is_granted('ROLE_USER') %}
          <a class="nav-link" href="{{ path('\logout') }}">Logout</a>
        {% else%}
          <a class="nav-link" href="{{ path('\login') }}">Login</a>
        {% endif %}
        </nav>
      </div>
    </div>        

    <div class='container'>      
            

        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
            
        {% endblock %}
    </body>
</html>
