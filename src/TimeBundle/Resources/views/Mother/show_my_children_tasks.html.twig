{% extends "::base.html.twig" %}

{% block title %}TimeBundle:Mother:showMyChildrenTasks{% endblock %}

{% block body %}
<h1>Welcome to the Mother:showMyChildrenTasks page</h1>
<div class='row'>
    
    <div class="col-sm-6">
        <div class="card" >
            <h2> </h2>
            <div class="card-block">
              <h4 class="card-title"> Admin Tasks </h4>
            </div>
            
            <ul class="list-group list-group-flush">
                {% if adminTasks %}
                {% for task in adminTasks %}
                    <li class="list-group-item">
                         {{ task.taskName }}

                    </li>

                {% endfor %}
                {% else %}
                    <li class="list-group-item"> Admin doesn`t have any tasks</li>
                {% endif %}
            </ul>
            
            <div class="card-block">

            </div>
        </div>
    </div>
    

    <div class="col-sm-6">
        <div class="card" >
            <h2> </h2>
            <div class="card-block">
              <h4 class="card-title"> Your Tasks </h4>
            </div>
            
            <ul class="list-group list-group-flush">
                {% if motherTasks %}
                {% for task in motherTasks %}
                    <li class="list-group-item">
                         {{ task.taskName }}

                    </li>

                {% endfor %}
                {% else %}
                    <li class="list-group-item"> you don`t have any tasks</li>
                {% endif %}
            </ul>
            
            <div class="card-block">

            </div>
        </div>
    </div>
    
</div>


{% endblock %}
